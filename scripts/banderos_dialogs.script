--20 БУТЫЛОК ВОДКИ
function prines_vodku(first_speaker, second_speaker)
	local actor, trader
	if db.actor and db.actor:id() == first_speaker:id() then
		actor = first_speaker
		trader = second_speaker
	else
		actor = second_speaker
		trader = first_speaker
	end
	
	local vodka = 0
	actor:iterate_inventory(function (dummy, item) if item:section()=="vodka" then vodka=vodka+1 end end, nil)
    if vodka>=20 then
        return true
	else
        return false
	end
end
function otdal_vodku(first_speaker, second_speaker)
	local item = ""
	local actor, trader
	if db.actor and db.actor:id() == first_speaker:id() then
		actor = first_speaker
		trader = second_speaker
	else
		actor = second_speaker
		trader = first_speaker
	end
	item = nagrad.level_1[math.random(table.getn(nagrad.level_1))]
	flamethrower.relocate_n_items_section(trader, "vodka", "out", 20)
    dialogs.relocate_item_section(second_speaker, item , "in")
end

