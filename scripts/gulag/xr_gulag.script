function checkNpc(npc_community, is_stalker, gulag_params, se_obj)
	local gulag = gulag_types[gulag_params.type] or get_gulag_ops(gulag_params.type, gulag_params.type_prefix)

	return gulag.check(npc_community, is_stalker and se_obj or nil)
end
