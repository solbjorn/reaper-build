local gulag_types = { }
local dynamic_ltx = { }

function get_gulag_ops(gulag_type, type_prefix)
	local res = gulag_types[gulag_type]
	if res then return res end

	local file = _G[level_gulags[gulag_type] or level_gulags[type_prefix]]
	if not file or not file.get_gulag then
		abort(gulag_type .. " (pref. " .. type_prefix .. ") has no file!")
		return nil
	end

	res = file.get_gulag(gulag_type)
	if not res or not (res.job and res.check) then
		abort("No valid ops for " .. gulag_type .. " (pref. " .. type_prefix .. ")")
		return nil
	end

	gulag_types[gulag_type] = res
	return res
end

function get_ltx(name, gulag_type, type_prefix)
	local ltx_name = table_concat({"*",name,"*",gulag_type})
	local dltx = dynamic_ltx[ltx_name]
	if dltx then
		return dltx, ltx_name
	end

	local gulag = gulag_types[gulag_type] or get_gulag_ops(gulag_type, type_prefix)
	local l = gulag.ltx(name)
	if not l then
		abort("Failed to get ini for " .. name .. ", type " .. gulag_type .. " (pref. " .. type_prefix .. ")")
		return nil, nil
	end
	dltx = create_ini_file(l)

	dynamic_ltx[ltx_name] = dltx
	return dltx, ltx_name
end

