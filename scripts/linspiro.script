local nagrad

function init_random(sect, ltx)
	if not ltx then ltx = ini_file("misc\\random_rewards.ltx") end

	local iter = { }

	for _, _type in ipairs(ltx:r_list(sect, "items") or { }) do
		iter[sect] = ltx:r_list(sect, _type) or { }
	end

	return iter
end

function random_reward(level, count)
	if not nagrad then nagrad = init_random("linspiro") end
	level = "level_" .. level

	for i = 1, (count or 1) do
		got(table.fastrand(nagrad[level]))
	end
end

