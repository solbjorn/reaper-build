function rank_get(npc, actor)
	local actor_, npc_
	if Actor and 0 ==npc:id() then
		actor_ = npc
		npc_ = actor
	else
		actor_ = actor
		npc_ = npc
	end

	if Actor:character_rank() > 300 then
		return false
	else
		return true
	end
end

