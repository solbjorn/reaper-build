function _G.get_ammo_data(obj, param)
	if obj and param then
		if param == "box_size" then
			return obj:get_go_int16(nil, 476)
		end
	end
end
---------------------------------------------------------------------------------------------------
function _G.set_ammo_data(obj, param, value)
