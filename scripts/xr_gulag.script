function checkNpc(npc_community, is_stalker, gulag_params, se_obj)
	local gulag_script_obj = level_gulags[gulag_params.type] or level_gulags[gulag_params.type_prefix]
	if not gulag_script_obj then return false end
	if is_stalker then
		return gulag_script_obj.checkStalker(npc_community, gulag_params.type, nil, se_obj)
	else
		return gulag_script_obj.checkMonster(npc_community, gulag_params.type, nil, se_obj)
	end
end
