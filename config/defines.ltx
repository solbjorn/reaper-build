; Все базовые значения по умолчанию для всех типов объектов в игре.
; Для соблюдения порядка новые базовые секции определять исключительно здесь!

[spawn_group_zone]
GroupControlSection = spawn_group_zone
class           	= AI_SPGRP

[spawn_group]
GroupControlSection = spawn_group
class           	= AI_SPGRP

; Иммунитеты
[immunities]
hit_probability_gd_novice	= 0.20
hit_probability_gd_stalker	= 0.30
hit_probability_gd_veteran	= 0.40
hit_probability_gd_master	= 0.50
immunities_sect				= default_immunities

[default_immunities] ; Иммунитеты по умолчанию
burn_immunity			= 1.0	; (+1% при + на 0.01)
strike_immunity			= 1.0
shock_immunity			= 1.0
wound_immunity			= 1.0
wound_2_immunity		= 1.0
radiation_immunity		= 1.0
telepatic_immunity		= 1.0
chemical_burn_immunity	= 1.0
explosion_immunity		= 1.0
fire_wound_immunity		= 1.0

; Параметры для задания изменения трения в момент смерти персонажа
[friction]
ph_skeleton_airr_lin_factor   = -0.45 ;2.0 ;550.0 (изменно из-за того, что убрано домножение коэффициент 0.002 из кода)
ph_skeleton_airr_ang_factor   = 0.0 ;0.0 (изменно из-за того, что убрано домножение на коэффициент 0.3 из кода (0.0*0.3=0.0))
ph_skeleton_hinger_factor1    = 1.0 ;1.0 (изменно из-за того, что убрано домножение на коэффициент 5.0 из кода)
ph_skeleton_ddelay	     	  = 15.0 ;Время изменения значения трения в суставе с момента создания шелла, сек

ph_skel_fatal_impulse_factor  = 4.0	;6.0
ph_after_death_velocity_factor= 0.75
ph_skel_shot_up_factor        = 0.25

ph_skeleton_skin_friction_start	= 0.0   ;Стартовое значение трения для оболочки
ph_skeleton_skin_friction_end	= 2.0   ;Финальное значение трения для оболочки
ph_skeleton_skin_ddelay			= 6.0		;Время изменения значения трения с момента создания шелла, сек.
ph_skeleton_skin_ddelay_after_wound = 2.0 ;Время изменения значения трения с момента создания шелла, сек.(для персонажа после ранения)
ph_pelvis_factor_low_pose_detect =0.3	;длинна луча на коллизию с землёй из центра пелвиса. Если коллизиться, то персонаж находиться в нижней позе(или ранен)(в этом случае для него задаються другие параметры трения и отсутствует домножение импульса для первого хита)
ph_character_have_wounded_state = false; имеет ли персонаж состояние раненый

; Базовая начальная секция
[base]
GroupControlSection		= spawn_group
cform           		= skeleton
; Ненужные значения, которые читаются, но в подавляющем большинстве не используются
inv_name_short			= UNUSED	; Это используется только на худе, и нужно прописывать только для патронов, ножей и гранат

[eatable] ; Eatable_item, все возможные параметры здесь, нулевые значения везде убраны
eat_health		= 0
eat_satiety		= 0
eat_power		= 0
eat_radiation		= 0
eat_alcohol		= 0
wounds_heal_perc	= 0
eat_portions_num	= 1

[attachable] ; Attachable item
auto_attach			= false

; Аномалии
[anomaly]
GroupControlSection	= spawn_group_zone
;$spawn 			= "zones\anom_zone"
;$prefetch 			= 16
attenuation     	= 1
period				= 1
idle_particles_dont_stop = false

; спавн артефаков из аномалии отключен, поэтому это все здесь
artefacts			=			; Список артов, которые спавнить: секция, удельная вероятность: af_dummy_spring, 0.41, af_dummy_dummy, 0.36 ...
BirthProbability 	= 0.0
min_artefact_count	= 0
max_artefact_count	= 0
artefact_spawn_idle	= 24  		; Насколько часто спавнить артефакты в офлайне, в часах
artefact_spawn_rnd	= 50  		; Вероятность заспавнить артефакт в процентах.
spawn_blowout_artefacts = off	; Рождение артефактов во время срабатывания в online

; Артефакты
[ARTEFACT]:base, immunities
class				= SCRPTART
animation_slot		= 11
allow_inertion		= true
attach_angle_offset	= 0,0,0
attach_position_offset = -0.1,-0.1,0
attach_bone_name	= bip01_root
inv_grid_width		= 1
inv_grid_height		= 1
belt				= true
af_actor_properties	= on
actor_properties	= on
health_restore_speed	= 0.0	; скорость восстановления здоровья (+100% при + на 0.0001)
radiation_restore_speed = 0.0	; скорость накопления радиации (+1 при + на 0.0001)
satiety_restore_speed	= 0.0	; скорость появления голода (+200% при + на 0.00001)
power_restore_speed		= 0.0	; скорость восстановления выносливости (+9 при + на 0.0005)
bleeding_restore_speed	= 0.0	; скорость кровотечения (+33.5% при + на 0.001)
inventory_radiation		= 0.0	; количество накапливаемой/выводимой радиации (+1 при + на 0.0001)
hit_absorbation_sect	= default_immunities

hud						= artefact_hud

[artefact_hud]
orientation         = 0, 0, 0
position            = 0, 0, 0
visual              = weapons\artefact\wpn_artefact_hud.ogf
anim_idle			= idle
anim_idle_sprint	= idle_sprint
anim_hide			= holster
anim_show			= draw
anim_activate		= activate

; Остальное
[O_INVBOX]:base
class				= O_INVBOX
$spawn        		= "physics\inventory_box"
script_binding      = bind_physic_object.init
visual 				= equipments\item_rukzak
radius 				= 1

[II_ANTIR]:base, immunities, eatable
class				= II_ANTIR

[II_DOC]:base, immunities
class				= II_DOC

[II_FOOD]:base, immunities, eatable, attachable
class				= II_FOOD

; Патроны
[AMMO]:base, immunities
class				= AMMO
belt				= true
impair				= 1		; коэффициент износа ствола от пули
buck_shot			= 1		; кол-во составляющих в пуле, > 1 только для дроби
tracer				= on
tracer_color_ID		= 0
explosive			= off

; Различные служебные и базовые секции
[breakable_object]
class           		= O_BRKBL
remove_time         	= 10      ;after remove_time seconds object will be removed after it is breaked
hit_break_threthhold    = 0.      ;weapon impact can stand breakable_object
collision_break_threthhold  = 2000.f  ;collision impact can stand breakable_object
immunity_factor       	= 1.3     ;hit power multiplier

[climable_object]
class           		= O_CLMBL

[ph_skeleton_object]
class         			= P_SKELET
remove_time       		= 120

[space_restrictor]
class         			= SPC_RS_S
GroupControlSection   	=
$spawn          		= "ai\space_restrictor"
script_binding          = bind_restrictor.bind

[level_changer]
class     				= LVL_CHNG
GroupControlSection 	=
$spawn      			= "ai\level changer"

[script_zone]
class     				= SCRIPTZN
GroupControlSection 	=
$spawn      			= "ai\script zone"
script_binding  		= xr_zones.bind

[respawn]
GroupControlSection		=
$spawn 					= "ai\respawn"
class					= RE_SPAWN
script_binding			= bind_respawn.bind

[smart_terrain]
GroupControlSection		=
$spawn 					= "ai\smart_terrain"
class					= SMRTTRRN
script_binding			= bind_smart_terrain.bind

[smart_terrain_stay_time]
quick   = 2,  5
medium  = 6,  8
long    = 12, 14
default = 10000, 10001

[identity_immunities]:immunities
use_aim_bullet				= false
time_to_aim				= 1.0

[common_ph_friction_params_on_npc_death]:friction

[monster_base]:common_ph_friction_params_on_npc_death
actor_hit_effect = effector_monster_hit
